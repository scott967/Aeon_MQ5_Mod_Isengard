						<colordiffuse>50FFFAF0</colordiffuse>
						<texture>settings_button_focus.png</texture>
					</control>
					<control type="label">
						<!-- 	<posx>400</posx> -->
						<posx>230</posx>
						<posy>0</posy>
						<width>350</width>
						<height>40</height>
						<align>center</align>
						<aligny>center</aligny>
						<font>Font_20</font>
