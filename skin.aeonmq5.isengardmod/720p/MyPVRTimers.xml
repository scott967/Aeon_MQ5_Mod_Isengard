						<aspectratio>stretch</aspectratio>
						<colordiffuse>FFFFFAF0</colordiffuse>
						<texture>settings_button_focus.png</texture>
					</control>
					<control type="label">
						<include>SettingsLabelFocus</include>
						<label>$INFO[ListItem.ChannelName]</label>
