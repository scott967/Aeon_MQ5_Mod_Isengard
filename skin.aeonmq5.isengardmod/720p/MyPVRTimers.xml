						<aligny>center</aligny>
						<font>Font_18A</font>
						<include>listcolorfocus</include>
						<info>ListItem.Label</info>
					</control>
					<control type="image">
						<posx>1080</posx>
						<posy>10</posy>
						<width>30</width>
						<height>20</height>
						<texture>pvr_isrecording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="label">
						<posx>1120</posx>
						<posy>1</posy>
						<width>110</width>
						<height>38</height>
						<align>left</align>
						<aligny>center</aligny>
						<font>Font_18A</font>
						<include>listcolorfocus</include>
						<info>ListItem.Comment</info>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="73">
				<include>ScrollBar_Vertical</include>
				<posx>1245</posx>
				<posy>135</posy>
				<height>430</height>
				<onleft>11</onleft>
				<onright>9900</onright>
				<ondown>73</ondown>
				<onup>73</onup>
				<!-- <visible>Control.IsVisible(14)</visible> -->
			</control>
			<include>PVRCommonInfo</include>
		</control>

		<!-- Furniture -->
		<include>TouchScreen</include>
		<include condition="Skin.HasSetting(pvrdate)">TopDate</include>
		<include>TopMenu_PVR</include>
		<include>BGBlack</include>
	</control>
</controls>
</window>
