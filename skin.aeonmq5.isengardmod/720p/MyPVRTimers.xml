				<focusedlayout height="40" width="1280">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>238</width>
						<height>40</height>
						<texture>settings_button.png</texture>
						<animation effect="fade" start="100" end="50" time="50" condition="!Control.Hasfocus(14)">conditional</animation>
					</control>
					<control type="image">
						<posx>240</posx>
						<posy>1</posy>
						<width>1040</width>
